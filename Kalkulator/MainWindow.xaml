<Window x:Class="Kalkulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kalkulator"
        mc:Ignorable="d"
        Title="Kalkulator" Height="600" Width="550"  WindowStartupLocation="CenterScreen"
        KeyDown="Window_KeyDown" Focusable="True">

    <Grid Background="#FF1E1E1E" Margin="10">

        <!-- Wyświetlacz -->
        <TextBox Name="Display" FontSize="42" HorizontalAlignment="Stretch" VerticalAlignment="Top"
                 Height="80" Margin="10" TextAlignment="Right" IsReadOnly="True" Background="#FF1E1E1E"
                 Foreground="White" BorderBrush="Black" BorderThickness="0" />
        
        <TextBox Name="History" FontSize="20" HorizontalAlignment="Stretch"
                 VerticalAlignment="Top" Height="25" Margin="10 90 10 10" TextAlignment="Right" IsReadOnly="True" Background="#FF1E1E1E"
                 Foreground="LightGray" BorderBrush="Black" BorderThickness="0"/>

        <!-- Przyciski -->
        <Grid Margin="10,120,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Wiersz 1 -->
            <Button Content="CE" FontSize="20" Grid.Row="0" Grid.Column="0" Click="ClearEntry_Click" />
            <Button Content="C" FontSize="20" Grid.Row="0" Grid.Column="1" Click="ClearAll_Click" />
            <Button Content="DEL" FontSize="20" Grid.Row="0" Grid.Column="2" Click="Backspace_Click"/>
            <Button Content="÷" FontSize="20" Grid.Row="0" Grid.Column="3" Click="Operator_Click"/>

            <!-- Wiersz 2 -->
            <Button Content="%" FontSize="20" Grid.Row="1" Grid.Column="0" Click="Percent_Click"/>
            <Button Content="√" FontSize="20" Grid.Row="1" Grid.Column="1" Click="Sqrt_Click"/>
            <Button Content="1/x" FontSize="20" Grid.Row="1" Grid.Column="2" Click="I_x" />
            <Button Content="×" FontSize="20" Grid.Row="1" Grid.Column="3" Click="Operator_Click"/>


            <!-- Wiersz 3 -->
            <Button Content="7" FontSize="20" Grid.Row="2" Grid.Column="0" Click="Number_Click"/>
            <Button Content="8" FontSize="20" Grid.Row="2" Grid.Column="1" Click="Number_Click"/>
            <Button Content="9" FontSize="20" Grid.Row="2" Grid.Column="2" Click="Number_Click"/>
            <Button Content="−" FontSize="20" Grid.Row="2" Grid.Column="3" Click="Operator_Click"/>


            <!-- Wiersz 4 -->
            <Button Content="4" FontSize="20" Grid.Row="3" Grid.Column="0" Click="Number_Click"/>
            <Button Content="5" FontSize="20" Grid.Row="3" Grid.Column="1" Click="Number_Click"/>
            <Button Content="6" FontSize="20" Grid.Row="3" Grid.Column="2" Click="Number_Click"/>
            <Button Content="+" FontSize="20" Grid.Row="3" Grid.Column="3" Click="Operator_Click"/>

            <!-- Wiersz 5 -->
            <Button Content="1" FontSize="20" Grid.Row="4" Grid.Column="0" Click="Number_Click"/>
            <Button Content="2" FontSize="20" Grid.Row="4" Grid.Column="1" Click="Number_Click"/>
            <Button Content="3" FontSize="20" Grid.Row="4" Grid.Column="2" Click="Number_Click"/>


            <!-- Wiersz 6 -->
            <Button Content="±" FontSize="20" Grid.Row="5" Grid.Column="0" Click="PlusMinus_Click"/>
            <Button Content="0" FontSize="20" Grid.Row="5" Grid.Column="1" Click="Number_Click"/>
            <Button Content="." FontSize="20" Grid.Row="5" Grid.Column="2" Click="Dot_Click"/>
            <Button Content="=" FontSize="20" Grid.Row="4" Grid.Column="3" Click="Equals_Click" Background="#FF2873DA" Foreground="White" Grid.RowSpan="2"/>


        </Grid>
    </Grid>
</Window>
